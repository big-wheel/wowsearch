{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "removeComments": true,
    "downlevelIteration": true,
    "esModuleInterop": false,
    "noLib": false,
    "lib": ["es6", "dom", "es2015", "es2016", "es2017"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./packages/**/*"],
  "exclude": [
    "**/__mocks__",
    "**/dist",
    "global.d.ts",
    "**/@types",
    "**/node_modules/**",
    "**/test",
    "**/__tests__"
  ]
}
