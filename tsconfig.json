{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "declare",
    "outDir": "dist",
    "allowJs": true,
    "downlevelIteration": true,
    "lib": [
      "es6",
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "test",
    "__tests__"
  ]
}
